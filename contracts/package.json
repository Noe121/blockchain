{
  "name": "nilbx-smart-contracts",
  "version": "1.0.0",
  "description": "NILbx Smart Contracts for Athlete NFTs and Sponsorship Management",
  "main": "index.js",
  "scripts": {
    "compile": "./compile-optimize.sh dev",
    "compile:dev": "./compile-optimize.sh dev",
    "compile:prod": "./compile-optimize.sh prod",
    "compile:clean": "./compile-optimize.sh clean",
    "compile:watch": "./compile-optimize.sh watch",
    "compile:parallel": "./compile-optimize.sh parallel",
    "test": "npx hardhat test",
    "test:gas": "REPORT_GAS=true npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "test:fuzz": "npx hardhat test --grep 'fuzz'",
    "test:invariant": "FOUNDRY_PROFILE=invariant npx hardhat test",
    "test:slither": "slither .",
    "test:mythril": "mythril analyze contracts/*.sol --solc-json hardhat.config.js",
    "deploy:sepolia": "npx hardhat run scripts/deploy.js --network sepolia",
    "deploy:mainnet": "npx hardhat run scripts/deploy.js --network mainnet",
    "verify": "npx hardhat verify",
    "clean": "npx hardhat clean && rm -rf cache artifacts typechain-types",
    "size": "npx hardhat size-contracts",
    "gas": "npx hardhat test --reporter gas",
    "lint": "npx solhint 'contracts/**/*.sol'",
    "lint:fix": "npx solhint --fix 'contracts/**/*.sol'",
    "format": "npx prettier --write 'contracts/**/*.sol' 'test/**/*.js' 'scripts/**/*.js'",
    "format:check": "npx prettier --check 'contracts/**/*.sol' 'test/**/*.js' 'scripts/**/*.js'",
    "audit": "npm run test:coverage && npm run test:slither && npm run lint",
    "precommit": "npm run lint && npm run format:check && npm run test"
  },
  "keywords": [
    "solidity",
    "smart-contracts",
    "nft",
    "erc721",
    "nil",
    "sponsorship",
    "blockchain",
    "audit-ready",
    "openzeppelin"
  ],
  "author": "NILbx Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.11",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.0.11",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.10",
    "chai": "^4.5.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.1",
    "hardhat": "^2.26.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^2.2.0",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^5.0.3",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.12",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
